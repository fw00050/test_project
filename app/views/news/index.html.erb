<h1>Latest News</h1>

<% @articles.each do |article| %>
  <div class="article">
    <div class="image"><%= image_tag article.picture_url %></div>
    <div class="content">
      <div class="title"><%= link_to article.title, article_path(article) %></div>
      <div class="short"><%= article.short_description %></div>
    </div>
    <div style="clear:both;"></div>
  </div>
<% end %>
