<h1>Listing records</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Event</th>
    <th>Date seen</th>
    <th>Gender</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.name %></td>
    <td><%= record.email %></td>
    <td><%= record.event %></td>
    <td><%= record.date_seen %></td>
    <td><%= record.gender %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= button_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

